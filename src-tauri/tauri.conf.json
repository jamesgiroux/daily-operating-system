{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DailyOS",
  "identifier": "com.dailyos.desktop",
  "version": "0.7.5",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DailyOS",
        "titleBarStyle": "Transparent",
        "hiddenTitle": true,
        "width": 1280,
        "height": 768,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/tray-iconTemplate@2x.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "resources": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application",
      "minimumSystemVersion": "13.0"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlBNzZDMDlCNzEyRkZCNDgKUldSSSt5OXhtOEIybW9Ud3pJTmNUeXJQUXFvc2d1dmRUL2VJUnBBYlBhQmdiQklxc3dqc2kvaUUK",
      "endpoints": [
        "https://github.com/jamesgiroux/daily-operating-system/releases/latest/download/latest.json"
      ]
    }
  }
}
