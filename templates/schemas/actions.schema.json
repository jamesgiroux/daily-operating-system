{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dailyos.dev/schemas/actions.json",
  "title": "DailyOS Actions",
  "description": "Action items with context. Keys use camelCase to match Rust serde(rename_all = camelCase).",
  "type": "object",
  "required": ["date", "actions"],
  "properties": {
    "date": {
      "type": "string",
      "format": "date"
    },
    "summary": {
      "type": "object",
      "properties": {
        "overdue": { "type": "integer", "minimum": 0 },
        "dueToday": { "type": "integer", "minimum": 0 },
        "dueThisWeek": { "type": "integer", "minimum": 0 },
        "waitingOn": { "type": "integer", "minimum": 0 }
      }
    },
    "actions": {
      "type": "array",
      "items": { "$ref": "#/$defs/action" }
    }
  },
  "$defs": {
    "action": {
      "type": "object",
      "required": ["id", "title", "priority", "status"],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "account": {
          "type": "string",
          "description": "Associated account if any"
        },
        "priority": {
          "type": "string",
          "enum": ["P1", "P2", "P3"]
        },
        "status": {
          "type": "string",
          "enum": ["pending", "completed", "waiting"]
        },
        "dueDate": {
          "type": "string",
          "format": "date"
        },
        "isOverdue": {
          "type": "boolean",
          "default": false
        },
        "daysOverdue": {
          "type": "integer",
          "minimum": 0
        },
        "context": {
          "type": "string",
          "description": "Additional context about the action"
        },
        "source": {
          "type": "string",
          "description": "Where this action came from (meeting, email, etc.)"
        }
      }
    }
  }
}
