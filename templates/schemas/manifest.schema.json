{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dailyos.dev/schemas/manifest.json",
  "title": "DailyOS Manifest",
  "description": "Index of files for a given day. Keys use camelCase to match Rust serde(rename_all = camelCase).",
  "type": "object",
  "required": ["date", "generatedAt"],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "1.0.0"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "The date this manifest represents (YYYY-MM-DD)"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When this manifest was generated"
    },
    "partial": {
      "type": "boolean",
      "default": false,
      "description": "True if generation was incomplete"
    },
    "profile": {
      "type": "string",
      "description": "User profile (csm, general)"
    },
    "files": {
      "type": "object",
      "properties": {
        "schedule": { "type": "string" },
        "actions": { "type": "string" },
        "emails": { "type": "string" },
        "preps": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "stats": {
      "type": "object",
      "properties": {
        "totalMeetings": { "type": "integer", "minimum": 0 },
        "customerMeetings": { "type": "integer", "minimum": 0 },
        "internalMeetings": { "type": "integer", "minimum": 0 },
        "actionsDue": { "type": "integer", "minimum": 0 },
        "actionsOverdue": { "type": "integer", "minimum": 0 },
        "emailsFlagged": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
