{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://daily-os.com/schemas/workspace.json",
  "title": "Daily Operating System Workspace Configuration",
  "description": "Centralized configuration for Daily Operating System workspace",
  "type": "object",
  "required": ["workspace", "organization"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema"
    },
    "workspace": {
      "type": "object",
      "description": "Workspace identification",
      "required": ["name", "role"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable workspace name",
          "minLength": 1,
          "examples": ["My Productivity", "Customer Success Hub", "Sales Hub"]
        },
        "role": {
          "type": "string",
          "description": "User's role for folder structure",
          "enum": ["customer_success", "sales", "project_management", "product_management", "marketing", "engineering", "consulting", "general"],
          "examples": ["customer_success"]
        }
      }
    },
    "organization": {
      "type": "object",
      "description": "Organization settings for meeting classification and email filtering",
      "required": ["name", "internal_domains"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Organization or company name",
          "examples": ["Acme Corp", "My Company"]
        },
        "internal_domains": {
          "type": "array",
          "description": "Email domains that belong to your organization (for meeting classification)",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9][a-zA-Z0-9-]{0,61}[a-zA-Z0-9]?\\.[a-zA-Z]{2,}$"
          },
          "uniqueItems": true,
          "examples": [["company.com", "subsidiary.com"]]
        }
      }
    },
    "features": {
      "type": "object",
      "description": "Enabled features",
      "properties": {
        "google_api": {
          "type": "boolean",
          "description": "Whether Google API integration is configured",
          "default": false
        },
        "web_dashboard": {
          "type": "boolean",
          "description": "Whether the web dashboard is installed",
          "default": false
        },
        "python_tools": {
          "type": "boolean",
          "description": "Whether Python automation tools are installed",
          "default": false
        },
        "web_dashboard_autostart": {
          "type": "boolean",
          "description": "Auto-start web dashboard when /today runs",
          "default": false
        }
      }
    },
    "lifecycle": {
      "type": "object",
      "description": "Account lifecycle tier configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether lifecycle tier tracking is enabled",
          "default": false
        },
        "tiers": {
          "type": "array",
          "description": "Configurable account tiers (e.g., strategic, growth, standard)",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the tier"
              },
              "label": {
                "type": "string",
                "description": "Display label for the tier"
              },
              "color": {
                "type": "string",
                "description": "Hex color code for visual display"
              },
              "contactThresholdDays": {
                "type": "integer",
                "description": "Days without contact before tier-specific alerts trigger"
              },
              "dashboardRefreshDays": {
                "type": "integer",
                "description": "Recommended dashboard review frequency in days"
              }
            },
            "required": ["id", "label"]
          }
        }
      }
    },
    "accounts": {
      "type": "object",
      "description": "Account data source configuration",
      "properties": {
        "sheetId": {
          "type": "string",
          "description": "Google Sheets ID for account data (optional)"
        },
        "columns": {
          "type": "object",
          "description": "Column index mapping for spreadsheet data",
          "properties": {
            "account": {
              "type": "integer",
              "description": "Column index for account name"
            },
            "tier": {
              "type": "integer",
              "description": "Column index for account tier"
            },
            "lastEngagement": {
              "type": "integer",
              "description": "Column index for last engagement date"
            },
            "contractValue": {
              "type": "integer",
              "description": "Column index for contract value"
            },
            "renewal": {
              "type": "integer",
              "description": "Column index for renewal date"
            },
            "cadence": {
              "type": "integer",
              "description": "Column index for meeting cadence"
            },
            "emailDomain": {
              "type": "integer",
              "description": "Column index for email domain"
            }
          }
        },
        "multiBuParents": {
          "type": "array",
          "description": "Parent companies with multiple business units",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Setup metadata",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "When the workspace was created"
        },
        "setup_version": {
          "type": "string",
          "description": "Version of setup wizard used",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "When configuration was last modified"
        }
      }
    }
  }
}
